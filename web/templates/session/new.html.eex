<%= form_for @conn, session_path(@conn, :create), [as: :session, class: "pure-form"], fn f -> %>
  <fieldset>
    <legend>Login</legend>
    <%= label f, :email, class: "" %>
    <%= text_input f, :email, class: "" %>
    <%= label f, :password, class: "" %>
    <%= password_input f, :password, class: "" %>
    <%= button "Log in", [to: "", type: "submit", class: "pure-button-primary pure-button"] %>
  </fieldset>
<% end %>
